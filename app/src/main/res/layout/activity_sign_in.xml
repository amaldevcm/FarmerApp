<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="#90EE90">

        <ImageView
            android:id="@+id/view_image"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:src="@drawable/ic_action_tree"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/view_image"
            android:fontFamily="@font/montserrat"
            android:text="Hey\nWelcome\nBack"
            android:textColor="@color/black"
            android:textSize="28dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signin to enjoy"
            android:layout_toRightOf="@id/view_image"
            android:layout_below="@id/welcome"
            android:textSize="18dp"
            android:fontFamily="@font/slabo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/UsernameL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/slabo">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:id="@+id/username"
                android:textColor="@color/black"
                android:inputType="textAutoCorrect">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordL"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/slabo"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="password"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:textColor="@color/black">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="80sp"
            android:fontFamily="@font/slabo"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:backgroundTint="#90EE90">

        </Button>

        <Button
            android:id="@+id/ForgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="70sp"
            android:background="#00000000"
            android:fontFamily="@font/slabo"
            android:text="Forgot Password?"
            android:textColor="#022793"
            android:textSize="15dp"
            app:backgroundTint="#ffff">

        </Button>

        <Button
            android:id="@+id/NewAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="70sp"
            android:layout_marginTop="-12sp"
            android:background="#00000000"
            android:fontFamily="@font/slabo"
            android:text="New Account"
            android:textColor="#022793"
            android:textSize="15dp"
            app:backgroundTint="#ffff">

        </Button>
    </LinearLayout>
</LinearLayout>